<div class="row row-spacing">

</div>
{{#if username}}
<div class="row">
  <div class="col-xs-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Chat Rooms</h3>
      </div>
      <div class="panel-body">
        <form class="form-inline">
          <input type="text" class="form-control" name="roomName" id="roomValue" placeholder="New Room Name">
          <button type="button" class="btn btn-primary" id="addRoom">Create Room</button>
        </form>
        
      </div>
      <ul class="list-group" id="roomList">
        {{#each rooms}}
          <li class="list-group-item">{{this}}<button type="button" class="btn btn-info button-format btn-xs room-button" name='{{this}}'>Show</button></li>
        {{/each}}
      </ul>
      <div class="padded">
        </div>
    </div>


  </div>
  <div class="col-xs-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Messages<span id="messageRoomName"></span></h3>
      </div>
      <div class="panel-body">
        <ul class="list-group" id="messageList">

        </ul>
      </div>


    </div>
  </div>
  <div class="col-xs-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Chat</h3>
      </div>
      <div class="panel-body">
        <form class="">
          <div class="form-group">
                  <textarea rows="5" class="form-control" id="messageToSend" placeholder="Type Your Message"></textarea>
          </div>
          <button type="button" class="btn btn-primary" id="sendMessage">Send</button>
        </form>
      </div>
    </div>
  </div>
</div>



{{else}}
<h3>Please sign in first!</h3>
{{/if}}
