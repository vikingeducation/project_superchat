<h1>Superchat</h1>

{{!-- create a room for each roomName --}}
{{#each results as |result|}}
   <div class="room">
      <p>{{result.room}}</p>
   {{#each result.messages as |message|}}
      <div class="message">
         {{message.message}}
      </div>
      <div class="user">
         {{message.user}}
      </div>
   {{/each}}
   </div>
{{/each}}

<div class="new-post">
   <form action="post">
      <textarea id="new-post"></textarea>
      <button type="submit">Send</button>
   </form>
</div>