<main class="container">
	<section class="row chat-container">
		<div id="message-container" class="col-sm-9">
			{{>chatroom}}
		</div>

		<aside id="side-nav" class="col-sm-3">
			<div id="room-list" class="panel panel-primary aside-panel">
				<header class="panel-heading">
					<h3 class="panel-title">Rooms</h3>
				</header>

				<section class="panel-body">
					{{>rooms}}
				</section>
			</div>

			<div id="user-list" class="panel panel-success aside-panel">
				<header class="panel-heading">
					<h3 class="panel-title">Users</h3>
				</header>

				<section class="panel-body">
					{{>users}}
				</section>
			</div>
		</aside>

	</section>
</main>
